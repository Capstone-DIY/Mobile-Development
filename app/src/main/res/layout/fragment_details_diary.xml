<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Add Diary Box -->
    <LinearLayout
        android:id="@+id/addDiaryBox"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/baseline_keyboard_backspace_24"
            android:contentDescription="Back"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/diaryText"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_button_background"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginLeft="65dp"
            android:text="Details Diary"
            android:layout_gravity="center"
            android:elevation="@dimen/activity_vertical_margin"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Emotion Tag -->
    <LinearLayout
        android:id="@+id/emotionTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_emotions_background"
        android:orientation="horizontal"
        android:layout_marginLeft="-4dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addDiaryBox">

        <ImageView
            android:id="@+id/ivLabelIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/small_circle_favorite_emotion" />

        <TextView
            android:id="@+id/tvLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Emotion"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Full Page CardView Content -->
    <androidx.cardview.widget.CardView
        android:id="@+id/diaryCard"
        android:layout_width="match_parent"
        android:layout_height="643dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="#7866D4"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emotionTag">

        <ImageView
            android:id="@+id/dot1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/group_481820" />

        <ImageView
            android:id="@+id/dot2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="108dp"
            android:src="@drawable/group_481820" />

        <ImageView
            android:id="@+id/dot3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/group_481820" />

        <ImageView
            android:id="@+id/dot4"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="292dp"
            android:src="@drawable/group_481820" />

        <ImageView
            android:id="@+id/dot5"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="384dp"
            android:src="@drawable/group_481820" />

        <ImageView
            android:id="@+id/dot6"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="476dp"
            android:src="@drawable/group_481820" />

        <ImageView
            android:id="@+id/dot7"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="550dp"
            android:src="@drawable/group_481820" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Text Content Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Date Text -->
                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Saturday, 16 November 2024"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <!-- Title Text -->
                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Project"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Description Text -->
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="310dp">

                    <TextView
                        android:id="@+id/descriptionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:paddingTop="10dp"
                        android:text="Tolonggg hari ini saya masih juga mengalami stuck pada project course, sangat konyol sekali aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa..."
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </ScrollView>
            </LinearLayout>

            <!-- Heart Icon -->
            <ImageView
                android:id="@+id/heartIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Favorite"
                android:src="@drawable/baseline_favorite_border_24"
                app:tint="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/responseLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="400dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <!-- Response Title -->
            <TextView
                android:id="@+id/responseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="198dp"
                android:text="Journal Response"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- Response Box -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#A39BF0"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/responseText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:padding="16dp"
                    android:text="Aduh, aku merasa sedih mendengar kamu merasa seperti itu.Aduh, aku merasa sedih mendengar kamu merasa seperti itu.Aduh, aku merasa sedih mendengar kamu merasa seperti itu.Aduh, aku merasa sedih mendengar kamu merasa seperti itu.Aduh, aku merasa sedih mendengar kamu merasa seperti itu.Aduh, aku merasa sedih mendengar kamu merasa seperti "
                    android:textColor="#FFFFFFFF"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
